root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.{ps1,psm1,psd1}]
indent_size = 4

[*.json]
indent_size = 4
insert_final_newline = false

[*.py]
indent_size = 4
insert_final_newline = false
